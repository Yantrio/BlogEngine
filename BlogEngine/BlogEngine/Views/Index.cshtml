@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<string>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <title>Blog</title>
    <script data-main="@this.ResolveUrl("~/Content/js/config")" src="//cdnjs.cloudflare.com/ajax/libs/require.js/2.1.14/require.js" async>
    </script>

    <script type="text/javascript">
        var disqus_shortname = 'yantrio'; // required: replace example with your forum shortname
    </script>

    <script src="http://yantrio.disqus.com/embed.js" type="text/javascript"></script>
    <script src="http://yantrio.disqus.com/count.js" type="text/javascript"></script>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/content/css/font-awesome.css" rel="stylesheet">
    <link href="~/Content/CSS/nprogress.css" rel="stylesheet" />
    <link href="http://fonts.googleapis.com/css?family=Merriweather" rel="stylesheet" type="text/css">
    <!--[if lt IE 9]>
        <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <link href="~/content/css/styles.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>
<body>
    <div class="wrapper">
        <div class="box">
            <div class="row">
                <!-- sidebar -->
                <div class="column small-1 col-sm-2" id="sidebar">
                    <div>
                        <img src="~/Content/Images/me.jpeg" class="me img-circle" />
                        <a class="logo" href="/">Yantr.io</a>
                        <span>
                            I'm crazy about .net
                        </span>
                        <div class="icons">
                            <a href="http://twitter.com/yantrio"><i class="fa fa-2x fa-twitter"></i></a>
                            <a href="http://github.com/yantrio"><i class="fa fa-2x fa-github-alt"></i></a>
                        </div>
                    </div>

                </div>
                <!-- /sidebar -->
                <!-- main -->
                <div class="column col-sm-10" id="main">
                    <div class="padding">
                        <div class="full col-sm-9">
                            <div id="content-destination">

                            </div>
                            <hr>
                            <div class="row" id="footer">
                                <div class="col-sm-6">
                                </div>
                                <div class="col-sm-6">
                                    <p>
                                        <a href="#" class="pull-right">©Copyright Inc.</a>
                                    </p>
                                </div>
                            </div>
                            <hr>
                        </div>
                        <!-- /col-9 -->
                    </div>
                    <!-- /padding -->
                </div>
                <!-- /main -->
            </div>
        </div>
    </div>
