@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<List<BlogEngine.Models.Post>>

@using NTimeAgo

@foreach (var Post in Model)
{
    <div class="row">
        <div class="col-sm-10">
            <a href="Posts/@Post.PostName"><h2>@Post.MetaData.Title</h2></a>
            <div class="blog exceprt">
                @this.Html.Raw(Post.ExcerptAsHtml)
            </div>
            <h4>
                <small class="text-muted">
                    @NTimeAgo.DateTimeInWordExtensions.InWords(Post.MetaData.CreatedDate) • <a href="Posts/@Post.PostName" class="text-muted">Read More</a>
            </small>
        </h4>
    </div>
    <div class="col-sm-2">
        <a href="#" class="pull-right">
            <img src="//placehold.it/100" class="img-circle">
        </a>
    </div>
</div>
    <div class="row divider">
        <div class="col-sm-12">
            <hr>
        </div>
    </div>
}

